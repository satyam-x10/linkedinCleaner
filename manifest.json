{
  "manifest_version": 3,
  "name": "LinkedIn Cleaner",
  "version": "1.0",
  "description": "Hide irrelevant or off-topic posts from LinkedIn feed.",
  "permissions": ["storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
